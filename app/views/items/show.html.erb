<% content_for :head do %>
  <title><%= "#{@item.title}-monolist" %></title>
  <meta name="description" content="<%= @item.title %>に関する情報です。この商品を持っている人と欲しい人を表示しています。">
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
          <% if @item.large_image.present? %>
            <%= image_tag(@item.large_image , alt: @item.title) %>
          <% else %>
            <%= image_tag("no-image.png" , alt: @item.title) %>
          <% end %>
        </div>
      </div>
      <div class="title">
        <% #TODO 商品タイトル %>
        <%= @item.title || "no name" %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <% @item.have_users.each do |user| %>
            <%= link_to user_path(user), {:alt => user.name} do %>
              <span class="gravatar">
                <%= gravatar_for(user, size: 20) %>
              </span>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <% @item.want_users.each do |user| %>
            <%= link_to gravatar_for(user, size: 20), user_path(user.id), { :alt => user.name }  %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to(image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}), @item_amazon_link, target: '_blank') %>
      </div>
    </div>
  </div>
</div>
